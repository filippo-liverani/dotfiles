client.focused          #586E75 #586E75 #fdf6e3 #2e9ef4
client.focused_inactive #93a1a1 #eee8d5 #93a1a1 #484e50
client.unfocused        #93a1a1 #eee8d5 #93a1a1 #484e50

exec --no-startup-id xsetroot -solid "#002b36"
exec --no-startup-id syndaemon -t -k -i 2 -d &
exec --no-startup-id start-pulseaudio-x11
exec --no-startup-id dropboxd &
exec --no-startup-id hotot-gtk3
exec --no-startup-id skype
exec --no-startup-id chromium
exec --no-startup-id xfce4-terminal
exec --no-startup-id monitor-right
